<% | $service_user = 'nginx',
     $logs_directory = '/var/log/nginx',
     $config_directory = '/etc/nginx',
     $server_block_directory = '/etc/nginx/conf.d'
| -%>
# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user              <%= $service_user %>;
worker_processes  1;

error_log  <%= $logs_directory -%>/error.log;
#error_log  <%= $logs_directory -%>/error.log  notice;
#error_log  <%= $logs_directory -%>/error.log  info;

pid        /var/run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       <%= $config_directory -%>/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  <%= $logs_directory -%>/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    # Load config files from <%= $server_block_directory -%>
    # The default server is in conf.d/default.conf
    include <%= $server_block_directory -%>/*.conf;

}
